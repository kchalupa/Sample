@model kchalupa.Web.HeartMedicalCenter.Authentication

@{
    ViewBag.Title = "StaffLogin";
}

@using (Html.BeginForm())
{
  <table class="formTable">
    <tr>
      <td>@Html.Label("Username: ")</td>
      <td>@Html.TextBoxFor((p) => p.Username, new { @class = "text" })</td>
    </tr>
    <tr>
      <td>@Html.Label("Password: ")</td>
      <td>@Html.PasswordFor((p) => p.Password, new { @class = "text" })</td>
    </tr>
    <tr>
      <td></td>
      <td><input type="submit" class="btn btn-success" value="Submit" />&nbsp;<input class="btn" type="reset" value="Reset" /></td>
    </tr>
  </table>
}