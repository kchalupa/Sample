<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>@ViewBag.Title - The Heart Family Medical Center</title>
  
  <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
  <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
  
  <script src="~/Scripts/modernizr-2.6.2.js"></script>
  <script src="~/Scripts/myFunctions.js"></script>
</head>
<body>
  <div class="container body-content">
    <table class="header">
      <tr>
        <td class="logo" width="100%">The Heart Family Medical Center<sup>TM</sup></td>
        <td class="links" style="white-space: nowrap;">@Html.ActionLink("Home", "Index", "Home")<img src="~/Content/seperator.png" />@Html.ActionLink("Appointment", "Appointment", "Home")<img src="~/Content/seperator.png" />@Html.ActionLink("Directions", "Directions", "Home")<img src="~/Content/seperator.png" />@Html.ActionLink("Physicians", "Physicians", "Home")<img src="~/Content/seperator.png" />@Html.ActionLink("Contact", "Contact", "Home")</td>
      </tr>
    </table>

    <br />
    <br />

    @RenderBody()

    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - @Html.ActionLink("The Heart Family Medical Center", "Index", "Administration")</p>
    </footer>
  </div>

  <script src="~/Scripts/jquery-1.10.2.min.js"></script>
  <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>